<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/menu_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Mario Avoids"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="120sp" />


    <LinearLayout
        android:id="@+id/menu_BTN_layout"
        android:layout_below="@id/menu_EDT_layout"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:gravity="center">

        <Button
            android:id="@+id/menu_BTN_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="START"
            android:backgroundTint="@color/black"/>
        <View
            android:layout_width="5dp"
            android:layout_height="5dp"/>

        <Button
            android:id="@+id/clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LEADERBOARD"
            android:backgroundTint="@color/black"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/menu_EDT_layout"
        android:layout_below="@id/menu_title"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:gravity="center">

        <EditText
            android:id="@+id/name_enter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Enter you name..."
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/menu_TGL_layout"
        android:layout_below="@id/menu_BTN_layout"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:gravity="center">

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SPEED"/>
        <com.google.android.material.switchmaterial.SwitchMaterial
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SENSORS"/>

    </LinearLayout>


</RelativeLayout>
